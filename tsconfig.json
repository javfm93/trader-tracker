{
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": ".",
    "strict": true,
    "noEmit": false,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "ts-node": {
    "files": true
  },
  "files": [
    "src/apps/CryptoWars/backend/global.d.ts"
  ],
  "include": [
    "src/**/**.ts",
    "node_modules/hash.js/lib/hash.d.ts"
  ],
  "exclude": ["node_modules"]
}
